generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RunStatus {
  queued
  running
  success
  error
  canceled
}

enum ArtifactKind {
  image
  mask
  json
  mesh_glb
  point_ply
  splat_ksplat
}

model User {
  id        String    @id @default(cuid())
  email     String?   @unique
  createdAt DateTime  @default(now())
  projects  Project[]
}

model Project {
  id           String       @id @default(cuid())
  userId       String
  name         String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  graphs       Graph[]
  runs         Run[]
  artifacts    Artifact[]
  cacheEntries CacheEntry[]

  @@index([userId])
}

model Graph {
  id        String   @id @default(cuid())
  projectId String
  name      String
  graphJson Json
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  runs      Run[]

  @@index([projectId])
  @@index([projectId, version])
}

model Run {
  id         String    @id @default(cuid())
  projectId  String
  graphId    String
  status     RunStatus @default(queued)
  startedAt  DateTime?
  finishedAt DateTime?
  logs       String    @default("")
  progress   Int       @default(0)
  createdAt  DateTime  @default(now())
  project    Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  graph      Graph     @relation(fields: [graphId], references: [id], onDelete: Restrict)
  artifacts  Artifact[]

  @@index([projectId])
  @@index([graphId])
  @@index([status])
}

model Artifact {
  id                String        @id @default(cuid())
  runId             String
  projectId         String
  nodeId            String
  kind              ArtifactKind
  mimeType          String
  byteSize          Int
  hash              String
  storageKey        String
  previewStorageKey String?
  meta              Json?
  createdAt         DateTime      @default(now())
  run               Run           @relation(fields: [runId], references: [id], onDelete: Cascade)
  project           Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  cacheEntries      CacheEntry[]

  @@index([runId])
  @@index([projectId])
  @@index([projectId, nodeId])
}

model CacheEntry {
  id         String   @id @default(cuid())
  projectId  String
  cacheKey   String   @unique
  artifactId String
  createdAt  DateTime @default(now())
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  artifact   Artifact @relation(fields: [artifactId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([artifactId])
}
